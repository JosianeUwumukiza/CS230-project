import java.util.ArrayList;

/**
 * Write a description of class Movie here.
 *
 * @author (your name)
 * @version (a version number or a date)
 */
public class Movie
{
    private String title;
    private ArrayList<Actor> actors;
    private double count;
    private double fcount;
    
 
    /**
     * Constructor for objects of class Movie
     */
    public Movie(String title)
    {
        this.title = title;
        actors = new ArrayList<Actor>();
        count = 0;
        fcount = 0;
    }

    /**
     * Method to add actor to arrayList
     *
     * @param  Actor, an object of an actor in the movie
     * 
     */
    public void addActor(Actor a)
    {
        actors.add(a);
        count ++;
        if (a.isFemale()){
            fcount++;
        }
    }
    
    /**
     * Method to add actor to arrayList
     *
     * 
     * @return  int, count of total actors
     */
    public double numOfActors()
    {
        return count;
    }
    
    /**
     * Method to return num of female actors 
     *
     * 
     * @return   int, number of female actors 
     */
    public double fActors()
    {
        int num = 0;
        
        for (Actor a : actors){
            if (a.isFemale()){
                num ++;
            }
        }
        return num;
    }
    
        /**
     * Method to return name of movie
     *
     * 
     * @return   string, name of movie
     */
    public String getMovieName()
    {
        return title;
    }

    /**
     * Method to get female to actor ratio
     * true if ratio of female actors greater than 48%
     *
     * 
     * @return boolean, if female actors > 0.48
     */
    public boolean ratio()
    {
        double ratio;
        ratio = fActors() / count;
        System.out.println("ratio: "+ratio);
        return ratio > 0.48;
        }
        
    /**
     * Method to get string version of array list
     *
     * 
     * @return String, layout of arraylist
     */
    public String toString()
    {
        String s = "Actors in " + title + " : \n";
        for (int i = 0; i < count; i++){
            s += actors.get(i).getActorName() + " " + actors.get(i).getGender() + "\n";
        }
        return s;
        }
    
    public boolean equals(String m){
        return m == title;
    }
        
    public double size(){
        return count;
    }
    public static void main(String[] args){
        Movie m = new Movie("a");
        Actor b = new Actor("b","Male");
        m.addActor(b);
        m.addActor(b);
        m.addActor(b);
        Actor a = new Actor("a","Female");
        m.addActor(a);
        m.addActor(a);
        m.addActor(a);
        m.addActor(a);
        
        System.out.println(m.ratio());
        
    }
}
