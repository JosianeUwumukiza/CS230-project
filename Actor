import java.util.ArrayList;

/**
 * Write a description of class Actor here.
 *
 * @author (your name)
 * @version (a version number or a date)
 */
public class Actor
{
    private String gender; 
    private String name;
    private ArrayList<String> movies;
    /**
     * Constructor for objects of class Actor
     */
    public Actor(String name, String gender)
    {
        this.gender = gender;
        this.name = name;
        movies = new ArrayList();
    }
    
    /**
     * Returns name of actor
     *
     * 
     * @return  String, name of actor
     */
    public String getName()
    {
        return name;
    }
    
    

    /**
     * Returns int based on gender of actor: 0=male, 1=female, 2=other
     *
     * 
     * @return   int, num of gender of actor 
     */
    public String getGender()
    {
        return gender;
    }
    
    /**
     * Returns boolean based on if actor is femaile
     *
     * 
     * @return   boolean, num of gender of actorif actor is female
    */
    public boolean isFemale()
    {
        return gender.equals("Female");
    }
    
    /**
     * returns the list of movies that an actor played.
     */
    public ArrayList<String> getMoviesList(){
        return movies;
    
    }
    
    /**
     * 
     */
    public void addMovies(Movie B){
        movies.add(B);
    }
    
    
    
}
